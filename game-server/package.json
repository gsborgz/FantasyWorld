{
  "name": "fw-game-server",
  "version": "1.0.0",
  "description": "Fantasy World MMO Server",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "dev": "npm run services:up && nest start --watch",
    "debug": "npm run services:up && nest start --debug --watch",
    "prod": "node dist/main",
    "services:up": "docker compose up -d",
    "services:stop": "docker compose stop",
    "services:down": "docker compose down",
    "build:shared": "ts-node scripts/build-shared.ts",
    "valkey:test": "ts-node scripts/valkey-test.ts",
    "lint:prettier:check": "prettier --check \"**/*.{json,md,yml,yaml}\"",
    "lint:prettier:fix": "prettier --write \"**/*.{json,md,yml,yaml}\"",
    "lint": "npm run lint:prettier:fix",
    "lint:check": "npm run lint:prettier:check"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-ws": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@nestjs/websockets": "^11.0.1",
    "dotenv": "^17.2.3",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.28",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
