{
  "name": "fw-auth-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "ISC",
  "scripts": {
    "build": "nest build",
    "dev": "npm run services:up && nest start --watch",
    "start": "nest start",
    "debug": "npm run services:up && nest start --debug --watch",
    "prod": "node dist/main",
    "lint:eslint:check": "eslint . --ext .ts --cache",
    "lint:eslint:fix": "eslint . --ext .ts --fix --cache",
    "lint:prettier:check": "prettier --check \"**/*.{json,md,yml,yaml}\"",
    "lint:prettier:fix": "prettier --write \"**/*.{json,md,yml,yaml}\"",
    "lint": "npm run lint:eslint:fix && npm run lint:prettier:fix",
    "lint:check": "npm run lint:eslint:check && npm run lint:prettier:check",
    "services:up": "docker compose up -d",
    "services:stop": "docker compose stop",
    "services:down": "docker compose down",
    "test": "cross-env NODE_ENV=test && npm run clear:test-db && node -r ts-node/register -r tsconfig-paths/register --test ",
    "tests": "cross-env NODE_ENV=test && npm run clear:test-db && node -r ts-node/register -r tsconfig-paths/register --test ./src/**/*.spec.ts",
    "test:cov": "c8 npm run test",
    "tests:cov": "c8 npm run tests",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d src/core/datasources/postgres.datasource.ts",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate ./src/core/migration/Migration -d src/core/datasources/postgres.datasource.ts",
    "migration:new": "rm -rf dist && npm run build && npm run migration:run && npm run migration:generate",
    "clear:test-db": "node -r tsconfig-paths/register -r ts-node/register ./scripts/clear-test-db.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.7",
    "express-useragent": "^1.0.15",
    "nestjs-i18n": "^10.5.1",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.21",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "10.1.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-useragent": "^1.0.5",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
